#include <iostream>
using namespace std;
int main(){
    int m[4][4]{
        {40,56,76,34},
         {46,59,77,30}, 
          {1,4,6,3,},
           {0,68,11,14}
    };
    for(int i=0;i<4;i++){
        for(int j=0;j<4;j++){
            cout<<m[i][j]<<" ";
        }cout<<endl;
    }
    
    for(int i=0;i<4;i++){
        if(i%2==0){
            for(int j=0;j<4;j++){
            cout<<m[i][j]<<endl;
        }cout<<endl;
    }


        else
        for(int j=3;j>=0;j--){
            cout<<m[i][j]<<endl;
        }cout<<endl;
    }
    return 0;
}

